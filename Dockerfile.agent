FROM node:22-bookworm-slim

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    git \
    make \
    openssh-client \
    python3 \
  && rm -rf /var/lib/apt/lists/*

# pnpm from Corepack (repo uses pnpm@10.x)
RUN corepack enable

# Infisical CLI for non-interactive cloud-agent env auth
RUN npm install -g @infisical/cli

WORKDIR /workspace

# Keep this image generic; mount repo in docker-compose for fast iteration.
COPY scripts/agent-bootstrap.sh /usr/local/bin/agent-bootstrap.sh
RUN chmod +x /usr/local/bin/agent-bootstrap.sh

CMD ["agent-bootstrap.sh"]
