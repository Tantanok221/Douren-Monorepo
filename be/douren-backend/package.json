{
  "name": "@be/douren-backend",
  "version": "0.0.1",
  "scripts": {
    "dev": "infisical export > .dev.vars && wrangler dev src/index.ts --port 2000",
    "preview": "infisical export > .dev.vars && wrangler dev src/index.ts --port 2000 --local",
    "deploy": "wrangler deploy --minify src/index.ts",
    "cron-test": "wrangler dev src/index.ts --test-scheduled --port 2000",
    "build": "tsc",
    "build:pkg": "tsc",
    "format": "npx @biomejs/biome format --write ./src",
    "lint": "npx @biomejs/biome lint --write ./src ",
    "test": "vitest run"
  },
  "exports": {
    "./api": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.2",
    "@hono/zod-validator": "^0.4.1",
    "@pkg/database": "workspace:*",
    "@pkg/type": "workspace:*",
    "@trpc/server": "11.0.0-rc.553",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.5.11",
    "lru-cache": "^11.2.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240529.0",
    "@pkg/env": "workspace:*",
    "@pkg/typescript-config": "workspace:*",
    "typescript": "^5.4.5",
    "vitest": "^2.1.1",
    "wrangler": "^4.0.0"
  }
}
