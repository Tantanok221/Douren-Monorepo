{
  "extends": "@pkg/typescript-config/be.json",
  "include": [
    "src",
    "worker-configuration.d.ts"
  ],
  "main": "dist/index.js",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "composite": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "strictPropertyInitialization": false,
    "baseUrl": "."
  },
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}