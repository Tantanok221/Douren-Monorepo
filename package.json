{
  "name": "douren-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy": "turbo deploy",
    "pkg": "turbo build:pkg && npm install",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "devbe": "turbo dev:backend"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "prettier": "^3.2.5",
    "turbo": "^2.1.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
