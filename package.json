{
  "name": "douren-monorepo",
  "private": true,
  "scripts": {
    "setup": "bash setup.sh",
    "setup:quick": "bash setup.sh --quick",
    "worktree": "bash scripts/worktree.sh",
    "worktree:list": "git worktree list",
    "build": "turbo build",
    "reset": "rimraf --glob node_modules",
    "all": "pnpm run pkg && pnpm run lib && pnpm run be",
    "be": "turbo build --filter=./be/* && pnpm install",
    "pkg": "turbo build --filter=./pkg/* && pnpm install",
    "lib": "turbo build --filter=./lib/* && pnpm install",
    "dev": "turbo dev",
    "preview": "turbo preview",
    "deploy": "turbo deploy",
    "format": "turbo format",
    "devbe": "turbo dev --filter=./be/*",
    "devfe": "turbo dev --filter=./fe/*",
    "devpkg": "turbo dev --filter=./pkg/*",
    "devlib": "turbo dev --filter=./lib/*",
    "previewbe": "turbo preview --filter=./be/*",
    "previewfe": "turbo preview --filter=./fe/*",
    "test": "turbo test",
    "codegen": "turbo codegen && pnpm run pkg",
    "db:generate": "turbo db:generate",
    "db:migrate": "infisical export > pkg/database/.env && turbo db:migrate",
    "db:introspect": "turbo db:introspect",
    "db:push": "turbo db:push",
    "db:migrate:booths:dry": "infisical run --env=dev -- node scripts/migrate-booths.mjs",
    "db:migrate:booths:apply": "infisical run --env=dev -- node scripts/migrate-booths.mjs --apply",
    "lint": "turbo lint",
    "env:push": "node scripts/sync-env-to-infisical.js",
    "env:pull": "node scripts/generate-env-binding.js && pnpm run pkg",
    "env:login": "infisical login",
    "dev:db": "infisical run --env=dev -- psql %LOCAL_DATABASE_URL",
    "db:sync": "make db_sync",
    "prepare": "husky",
    "reinstall": "rimraf --glob ./**/node_modules && rimraf --glob ./**/dist && rimraf --glob ./**/.turbo && pnpm install && pnpm run pkg && pnpm run lib && pnpm run be "
  },
  "devDependencies": {
    "@babel/types": "^7.25.6",
    "@biomejs/biome": "1.9.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/babel__core": "^7.20.5",
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.3",
    "barrelsby": "^2.8.1",
    "dotenv": "^16.4.5",
    "from-env": "^1.1.4",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.1.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "fe/*",
    "be/*",
    "pkg/*",
    "lib/*"
  ],
  "packageManager": "pnpm@10.28.0"
}
